{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDirs": [
      "src",
      "tests",
      "prisma" 
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests",
    "prisma" 
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
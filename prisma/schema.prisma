generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String             @id @default(uuid())
  name            String
  email           String             @unique
  passwordHash    String
  createdAt       DateTime           @default(now())
  
  // Relacionamento com o Token de Redefinição
  resetTokens     PasswordResetToken[]
}

model PasswordResetToken {
  id              String             @id @default(uuid())
  // O hash do token (para segurança, assim como a senha do usuário)
  tokenHash       String             @unique

  // Identifica a qual usuário este token pertence
  userId          String             
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Data de expiração (normalmente 15-30 minutos)
  expiresAt       DateTime
  
  // O token só pode ser usado uma vez
  used            Boolean            @default(false)
  
  createdAt       DateTime           @default(now())
}

// Subject (Ex: Mathematics, Portuguese)
model Subject {
  id   String @id @default(uuid())
  name String @unique

  topics    Topic[] // A Subject has many Topics
  questions Question[] // A Subject has many Questions
}

// Topic (Ex: Algebra, Syntax)
model Topic {
  id   String @id @default(uuid())
  name String

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade) // Deleting Subject removes Topic

  // N-to-N relation with Question
  questions Question[]
}

// Question (The statement)
model Question {
  id   String @id @default(uuid())
  text String @db.Text // Question text

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id]) // Main subject

  // 1-to-N relation with Alternative
  alternatives Alternative[]

  // N-to-N relation with Topic
  topics Topic[]
}

// Alternative (The options for the question)
model Alternative {
  id        String  @id @default(uuid())
  text      String
  isCorrect Boolean @default(false) // This is our "answer key"

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade) // Deleting Question removes alternatives
}

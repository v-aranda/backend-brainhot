generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String             @id @default(uuid())
  name            String
  email           String             @unique
  passwordHash    String
  createdAt       DateTime           @default(now())
  
  // Relacionamento com o Token de Redefinição
  resetTokens     PasswordResetToken[]
}

model PasswordResetToken {
  id              String             @id @default(uuid())
  // O hash do token (para segurança, assim como a senha do usuário)
  tokenHash       String             @unique

  // Identifica a qual usuário este token pertence
  userId          String             
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Data de expiração (normalmente 15-30 minutos)
  expiresAt       DateTime
  
  // O token só pode ser usado uma vez
  used            Boolean            @default(false)
  
  createdAt       DateTime           @default(now())
}
